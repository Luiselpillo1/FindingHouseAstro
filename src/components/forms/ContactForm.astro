---
import { Button, FormInput, FormSelect, FormTextarea } from '@components/odyssey-theme';

const selectOptions = [
  "Busquedas de Google",
  "Redes sociales",
  "Correo",
]

---

<form name="Formulario de contacto" method="POST" action="/contact-thank-you">
  <FormInput type="text" label="Nombre" name="Nombre" placeholder="Carlos LÃ³pez" />
